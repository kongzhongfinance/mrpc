global-reset()

html
  box-sizing: border-box

*, *:before, *:after
  box-sizing: inherit

.text-center
  text-align: center

.nav,.clearfix:before
    display: table;
    content: " ";
.nav,.clearfix:after
    display: table;
    content: " ";
    clear:both

.md-padding-y
  padding: 20px 0
button
input[type="reset"]
input[type="button"]
input[type="submit"]
  &::-moz-focus-inner
    padding: 0
    margin: 0
    border: 0

input, button, select
  margin: 0
  padding: 0
  border: 0

html, body
  @media screen
    height: 100%

body
  background: color-easywechat
  font-size: font-size
  font-family: font-sans
  color: color-default
  text-rendering: optimizeLegibility
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  position: relative
  letter-spacing: 0.6px
  line-height: line-height

.wrapper
  clearfix()
  @media screen
    max-width: max-width
    margin: 0 auto

.inner
  clearfix()
  @media screen
    padding: 0 gutter-width

#content-wrap
  background: #fff
  border-top: 1px solid darken(color-easywechat, 5%)
  border-bottom: 1px solid darken(color-easywechat, 5%)

.emoji{width:1.5em;height:1.5em;display:inline-block;margin-bottom:-.25em;background-size:contain}
